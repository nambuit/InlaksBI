@model InlaksIB.Module

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Delete Module</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ModuleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.value)

        </dd>

    </dl>

    @using (Html.BeginForm("ProcessModule", "home", new { id = Model.ModuleID, mode = "delete" }, FormMethod.Post)) { 
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ModuleSetup", new { id = 0, mode = "create" })
        </div>
    }
</div>
