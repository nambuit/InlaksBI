
@{
    ViewBag.Title = "RolesResources";
    Layout = "~/Views/Home/HomeLayout.cshtml";
}


<div class="col-md-9">

    <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title">Roles Resources Setup</div>
        </div>
        
        <div class="panel-body">
            @using (Html.BeginForm("ProcessRoleResources", "home",  FormMethod.Post))
            {
              //  var se = new InlaksIB.Controllers.HomeController().getRoleResources(1);
                @Html.AntiForgeryToken()

                var roles = new InlaksBIContext().Roles.Where(r => r.RoleID != 1);
                <div class="form-horizontal" style="width:80%;">

                    <div class="form-group">
                            <label class="control-label" style="color:@ViewBag.errorclass" for="RoleID">@ViewBag.Message</label>
                        </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <h4>Select Role</h4>
                            <p>
                                <select id="crole" onchange="processrole(this)" name="role" class="selectpicker select2" required>
                                    <option value="null">Please Select a Role</option>
                                    @foreach (var role in roles)
                                    {
                                        <option value="@role.RoleID">@role.RoleName</option>
                                    }

                                </select>
                            </p>
                            </div>
                            </div>

                   

                    <div id="rselect" class="form-group">
                    
                     </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                        </div>


                </div>

            }
</div>
       
</div>
   
</div>